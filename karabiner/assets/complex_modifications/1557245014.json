{
  "title": "For Russian",
  "rules": [
    {
      "description": "Change grave accent (`) to Ñ‘ in Russian layout",
      "manipulators": [
        {
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "ru"
                }
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "non_us_backslash"
            }
          ]
        }
      ]
    }
  ]
}
